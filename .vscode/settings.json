{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [
    {
      "pattern": "./packages/*/"
    },
    {
      "pattern": "./tools/*/"
    },
    {
      "pattern": "./examples/*/"
    }
  ],
  "git.branchProtection": ["main"]
}
